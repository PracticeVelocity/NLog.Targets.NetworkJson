<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
  <extensions>
    <add assembly="NLog.Targets.NetworkJson"/>
  </extensions>
  <targets async="true">
    <target xsi:type="FallbackGroup" name="LogstashWithFallback" returnToFirstOnSuccess="true">
      <!-- Try and write direct -->
      <target name="TryLogStash" xsi:type="NetworkJson" endpoint="tcp://d-loga.pvops.com:8889" />
      <!-- On failure store and forward like everyone else -->
      <target name="FailToGDService" xsi:type="GDService" guaranteedDeliveryEndpoint="http://127.0.0.1:8886" networkJsonEndpoint="tcp://d-loga.pvops.com:8889" />
    </target>
    
    <target name="GDService" xsi:type="GDService" guaranteedDeliveryEndpoint="http://127.0.0.1:8886" networkJsonEndpoint="tcp://d-loga.pvops.com:8889" />
    
    <target name="LogStash" xsi:type="NetworkJson" endpoint="tcp://d-loga.pvops.com:8889" />
    
    <target name="ConsoleLog" xsi:type="ColoredConsole" detectConsoleAvailable="true" layout="${message}${newline}${event-properties:item=data}" />
    <target name="ErrorConsoleLog" xsi:type="ColoredConsole" errorStream="true" detectConsoleAvailable="true" layout="${message}${newline}${event-properties:item=data}${newline}${exception:format=message,shorttype}" />

    <target name="TraceFile" xsi:type="File"
        fileName="C:/Logs/${machinename}/${processname}/${processname}__Trace.txt"
        layout="${longdate} | ${logger} | ${level} | ${message} | ${event-properties:item=data}"
        archiveFileName="C:/Logs/${machinename}/${processname}/Trace/${processname}__Trace_{##}.txt"
        archiveNumbering="DateAndSequence"
        archiveDateFormat="yyyyMMdd"
        archiveEvery="Day"
        maxArchiveFiles ="7"
        keepFileOpen="true" />
  </targets>

  <rules>
    <logger name="pv-supportapp-gdservicenetworkjson*" minlevel="Info" maxlevel="Fatal" writeTo="LogstashWithFallback" enabled="true" />
    
    <!--<logger name="pv-supportapp-gdservicenetworkjson-*" minlevel="Info" maxlevel="Fatal" writeTo="GDService" enabled="true" />
    <logger name="pv-supportapp-gdservicenetworkjsonnogd-*" minlevel="Info" maxlevel="Fatal" writeTo="LogStash" enabled="true" />-->
    
    <logger name="*" minlevel="Trace" maxlevel="Fatal" writeTo="TraceFile" enabled="true" />

    <!--Log for all console-->
    <logger name="*" minlevel="Error" maxlevel="Fatal" writeTo="ErrorConsoleLog" enabled="true" />
    <logger name="*" minlevel="Info" maxlevel="Warn" writeTo="ConsoleLog" enabled="true" />
    <logger name="*" minlevel="Trace" maxlevel="Debug" writeTo="ConsoleLog" enabled="true" />
  </rules>
</nlog>
